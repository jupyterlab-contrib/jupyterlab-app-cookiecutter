{
  "name": "{{cookiecutter.github_project_name}}",
  "version": "0.1.0",
  "author": "{{cookiecutter.author_name}}",
  "description": "{{cookiecutter.project_short_description}}",
  "files": [
    "lib/**/*.{d.ts,js.map,js}",
    "style/**/*.{css,svg}",
    "schema/*.json"
  ],
  "sideEffects": [
    "style/**/*.css"
  ],
  "types": "lib/index.d.ts",
  "style": "style/index.css",
  "directories": {
    "lib": "lib/"
  },
  "scripts": {
    "build": "tsc && webpack",
    "build:prod": "tsc && webpack --mode=production",
    "clean": "rimraf lib tsconfig.tsbuildinfo",
    "prepublishOnly": "yarn run build",
    "prettier": "prettier --write '**/*{.ts,.tsx,.js,.jsx,.css,.json,.md}'",
    "prettier:check": "prettier --list-different \"**/*{.ts,.tsx,.js,.jsx,.css,.json,.md}\"",
    "eslint": "eslint . --ext .ts,.tsx --fix",
    "eslint:check": "eslint . --ext .ts,.tsx",
    "lint": "yarn prettier && yarn eslint",
    "test": "jest",
    "watch:ts": "tsc -w --listEmittedFiles",
    "watch:webpack": "webpack --watch",
    "watch": "npm-run-all --parallel watch:ts watch:webpack"
  },
  "dependencies": {
    "@jupyterlab/application": "^3.3.2",
    "@jupyterlab/apputils": "^3.3.2",
    "@jupyterlab/mainmenu": "^3.3.2",
    "@jupyterlab/theme-light-extension": "^3.3.2",
    "@jupyterlab/ui-components": "^3.3.2",
    "@lumino/widgets": "^1.31.1",
    "es6-promise": "~4.2.8"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.17.10",
    "@jupyterlab/testutils": "^3.4.0",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "css-loader": "~3.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsdoc": "^30.6.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "file-loader": "~5.0.2",
    "fs-extra": "^8.1.0",
    "glob": "~7.1.6",
    "jest": "^26.4.2",
    "jest-raw-loader": "^1.0.1",
    "mini-css-extract-plugin": "~0.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "raw-loader": "~4.0.0",
    "rimraf": "~3.0.2",
    "style-loader": "~1.0.1",
    "svg-url-loader": "~6.0.0",
    "ts-jest": "^26.3.0",
    "typescript": "~4.0.3",
    "url-loader": "~4.1.1",
    "watch": "~1.0.2",
    "webpack": "^5.7.0",
    "webpack-bundle-analyzer": "^4.1.0",
    "webpack-cli": "^4.2.0",
    "whatwg-fetch": "^3.0.0"
  }
}
